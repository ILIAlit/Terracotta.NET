                            <div class="nav__select">
                                <div class="nav__item products__btn-change">Изменить</div>
                                <div class="line nav__line"></div>
                                <div class="nav__item products__btn-remove">Удалить</div>
                            </div>
                        </div>

                        <button class="products__btn-change button">Изменить</button>
                        <button class="products__btn-remove button">Удалить</button>
                    </div>
                    <div class="line products__line"></div>
                </div>*@
            </div>
        </main>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="~/js/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/indexPage.js"></script>
</body>
</html>


